<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>



    <h1>Transactions</h1>

    <a href="/transactions/new">Add a new transaction</a>

    <ul>
      <% transactions.forEach((transaction) => {%>

      <li>
        
            <%= now.getMonth()%>/<%=now.getDate();%>  <%=transaction.transaction%> $<%=transaction.amount%> , <%=transaction.company%>,
          
        
       
        <a href="transactions/<%=transaction._id%>/edit">Edit</a>
        
      
       
      </li>

      <%})%>
    </ul>
  </body>
</html>
